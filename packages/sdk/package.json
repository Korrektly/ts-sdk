{
  "name": "@korrektly/sdk",
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "author": {
    "name": "Aditya Tripathi",
    "email": "aditya@climactic.co"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js",
      "default": "./dist/types.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node --format esm --sourcemap --minify && bun build ./src/types.ts --outdir ./dist --target node --format esm && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationMap",
    "dev": "bun build ./src/index.ts --outdir ./dist --target node --format esm --sourcemap --watch",
    "test": "bun test",
    "check": "biome check --write .",
    "biome:ci": "biome ci .",
    "lint": "biome check ."
  },
  "devDependencies": {
    "@types/bun": "^1.3.1",
    "typescript": "^5.9.3"
  }
}
