{
  "name": "my-turborepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "check": "turbo run check",
    "check-types": "turbo run check-types",
    "biome:check": "biome check",
    "biome:write": "biome check --write",
    "biome:ci": "biome ci",
    "changeset": "changeset",
    "publish-packages": "changeset version && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.0",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}